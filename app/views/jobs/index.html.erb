<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Job title</th>
    <th>Job description</th>
    <th>Required skills 1</th>
    <th>Required skills 2</th>
    <th>Required skills 3</th>
    <th>Startdate</th>
    <th>Enddate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.Job_title %></td>
    <td><%= job.JobDesc %></td>
    <td><%= job.RequiredSkills_1 %></td>
    <td><%= job.RequiredSkills_2 %></td>
    <td><%= job.RequiredSkills_3 %></td>
    <td><%= job.Startdate %></td>
    <td><%= job.Enddate %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

