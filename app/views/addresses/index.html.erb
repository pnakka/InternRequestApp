<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Streetnumber</th>
    <th>Streetname</th>
    <th>City</th>
    <th>State</th>
    <th>Zipcode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<%= current_at_tab 'Addresses' %>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.StreetNumber %></td>
    <td><%= address.StreetName %></td>
    <td><%= address.city %></td>
    <td><%= address.state %></td>
    <td><%= address.zip %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

